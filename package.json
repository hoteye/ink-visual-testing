{
  "name": "ink-visual-testing",
  "version": "0.1.7",
  "description": "Visual regression testing for Ink components",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:visual": "vitest --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xterm/addon-unicode11": "^0.8.0",
    "ink": "^4.4.1",
    "node-pty": "^1.0.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "terminal-screenshot": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "font"
  ],
  "keywords": [
    "ink",
    "visual-testing",
    "regression-testing",
    "terminal",
    "cli",
    "canvas",
    "snapshot"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoteye/ink-visual-testing.git"
  },
  "homepage": "https://github.com/hoteye/ink-visual-testing#readme",
  "bugs": {
    "url": "https://github.com/hoteye/ink-visual-testing/issues"
  }
}
